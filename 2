#include <stdio.h>
#include <errno.h>
#include <stdlib.h>
#include <string.h>
#include <sys/stat.h>
#include <getopt.h>
#include "cli.h"

void parseArguments(int argc, char *argv[], Pics img, Input input) {
    if (argc == 2) {
        int i = 1; // Start from the first argument
        while (i < argc) {
            if (strcmp(argv[i], "-h") == 0 || strcmp(argv[i], "--help") == 0) {
                printHelp();
            } else if (strcmp(argv[i], "-v") == 0 || strcmp(argv[i], "--version") == 0) {
                printf("Version information here.\n");
            } else {
                printf("Unknown option: %s\n", argv[i]);
                return;
            }
            i++; // Move to the next argument
        }
    } else {
        // Handle other logic for image processing options
        // Implement the logic in your parseArguments function
    }

}

Action performAction(const Action *action) {
    printf("Hello there!");
    return 1;
}

void printHelp() {
    printf("Usage:\n");
    printf("    ipl [Oprions] <input_path> <operations> <output_path>\n");
    printf("\nOprions:\n");
}
